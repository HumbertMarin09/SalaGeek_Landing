# ==============================================================================
# Cache Control & Force Refresh
# ==============================================================================

# Disable ETags
<IfModule mod_headers.c>
    Header unset ETag
    FileETag None
</IfModule>

# Force browser to revalidate
<IfModule mod_headers.c>
    # For HTML files - always revalidate
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate, max-age=0"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>

    # For JavaScript files - short cache with revalidation
    <FilesMatch "\.(js)$">
        Header set Cache-Control "public, max-age=3600, must-revalidate"
    </FilesMatch>

    # For CSS files - short cache with revalidation
    <FilesMatch "\.(css)$">
        Header set Cache-Control "public, max-age=3600, must-revalidate"
    </FilesMatch>

    # For images - longer cache
    <FilesMatch "\.(jpg|jpeg|png|gif|ico|svg|webp)$">
        Header set Cache-Control "public, max-age=86400"
    </FilesMatch>
    
    # For fonts - 1 year cache
    <FilesMatch "\.(woff|woff2|ttf|otf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
</IfModule>

# ==============================================================================
# Compression (Enhanced)
# ==============================================================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript
    AddOutputFilterByType DEFLATE application/javascript application/json application/xml
    AddOutputFilterByType DEFLATE application/rss+xml application/atom+xml
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE font/woff font/woff2
</IfModule>

# ==============================================================================
# Security & SEO Headers
# ==============================================================================
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # Prevent MIME type sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # XSS Protection
    Header always set X-XSS-Protection "1; mode=block"
    
    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# ==============================================================================
# Redirects for SEO (Canonical URLs)
# ==============================================================================
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Redirect www to non-www (canonical)
    RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
    RewriteRule ^(.*)$ https://%1/$1 [R=301,L]
    
    # Force HTTPS
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Remove trailing slash (prevent duplicate content)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [R=301,L]
</IfModule>

# ==============================================================================
# MIME Types for SEO & Performance
# ==============================================================================
<IfModule mod_mime.c>
    AddType application/javascript js
    AddType application/json json
    AddType font/woff woff
    AddType font/woff2 woff2
    AddType image/webp webp
    AddType image/svg+xml svg
    AddType application/manifest+json webmanifest
    AddCharset UTF-8 .html .css .js .xml .json .txt
</IfModule>

# ==============================================================================
# Protect Sensitive Files
# ==============================================================================
<FilesMatch "(^\.htaccess|^\.git|^\.env|package\.json|package-lock\.json)">
    Require all denied
</FilesMatch>
